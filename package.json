{
  "name": "postcss-fontpie",
  "version": "3.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomer@aberba.ch",
    "url": "https://tomeraberba.ch"
  },
  "description": "A PostCSS plugin for optimizing font loading layout shifts using fontpie!",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "fontpie",
    "fonts",
    "cls"
  ],
  "homepage": "https://github.com/TomerAberbach/postcss-fontpie",
  "repository": "TomerAberbach/postcss-fontpie",
  "bugs": {
    "url": "https://github.com/TomerAberbach/postcss-fontpie/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/TomerAberbach"
  },
  "license": "Apache-2.0 AND MIT",
  "files": [
    "dist",
    "license-apache",
    "license-mit",
    "notice-apache"
  ],
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">= 22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "format": "prettier --cache --write .",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --fix .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "bench": "vitest bench",
    "build": "tsdown",
    "prepublishOnly": "pnpm build"
  },
  "prettier": "@tomer/prettier-config",
  "dependencies": {
    "@csstools/css-parser-algorithms": "^3.0.5",
    "@csstools/css-tokenizer": "^3.0.4",
    "fontkit": "^2.0.4",
    "fontpie-calc": "^0.2.0",
    "slashes": "^3.0.12"
  },
  "peerDependencies": {
    "postcss": "^8"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@tomer/eslint-config": "^4.1.1",
    "@tomer/prettier-config": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "jest-extended": "^6.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "publint": "^0.3.12",
    "rollup-plugin-tree-shakeable": "^2.0.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
